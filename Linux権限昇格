//suidの捜索
find / -type f -perm -u=s 2>/dev/null　#suid
find / -perm -g=s -type f 2>/dev/null　#guid

//カーネルバージョン
uname -a
cat /proc/version
cat /etc/issue

//rootとして実行中のプログラム
ps aux

//ユーザがインストールしたソフトウェアの探索
/usr/local/
/usr/local/src
/usr/local/bin
/opt/
/home
/var/
/usr/src/

dpkg -l　# Debian
rpm -qa (CentOS / openSUSE )　# CentOS, OpenSuse, Fedora, RHEL
pkg_info　# OpenBSD, FreeBSD
